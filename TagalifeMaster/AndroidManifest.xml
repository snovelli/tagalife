<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.controlS.tagalife"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.controlS.tagalife.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.controlS.tagalife.LocationActivity"
            android:label="@string/title_activity_location" >
        </activity>
        <activity
            android:name="com.controlS.tagalife.MarcheASActivity"
            android:label="@string/title_activity_marche_as" >
        </activity>
        <activity
            android:name="com.controlS.tagalife.AppelActivity"
            android:label="@string/title_activity_appel" >
        </activity>
        <activity
            android:name="com.controlS.tagalife.DonActivity"
            android:label="@string/title_activity_don" >
        </activity>
        <activity
            android:name="com.controlS.tagalife.ResultActivity"
            android:label="@string/title_activity_result" >
        </activity>
    </application>

</manifest>